         <form action="/auth/register" method="post" class="">
            <h3 class="mb-4">Register</h3>
            <div class="mb-3">
               <label for="register-email" class="form-label">Email address</label>
               <input type="email" name="username" class="form-control" id="register-email"
                  aria-describedby="emailHelp">

               <div id="emailHelp" class="form-text">
                  We'll never share your email with anyone
               </div>

               <div class="mb-3">
                  <label for="register-password" class="form-label">Password</label>
                  <input type="password" name="password" class="form-control" id="register-password" required
                     minlength="6">

                  <div id=" emailHelp" class="form-text">
                     Password must be at least 6 characters long
                  </div>
                  <button type="submit" class="btn purple_btn">Submit</button>
         </form>
